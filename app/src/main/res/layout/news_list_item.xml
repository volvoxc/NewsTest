<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_news_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_cnBeta_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_news_img"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cnBeta_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cnBeta_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_news_img"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="11sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_zhihu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_news_img"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_news_img"
            android:layout_marginTop="7dp"
            android:textSize="11sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>